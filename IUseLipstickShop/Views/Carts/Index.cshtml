@model IEnumerable<Models.Framework.Cart>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Content/js/CartControler.js"></script>
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/Your-cart.css">
</head>
<div class="body_main">
    <div class="content">
        <div class="tieu-de">
            <br>
            <p>Your Cart</p>
        </div>
        <div class="main">
            <table style="width: 100%;border-bottom: 1px solid black">
                <tr style="border: 1px solid red;">
                    <th style="width: 50%;height: 80px;">PRODUCT</th>
                    <th style="width: 20%;height: 80px;">PRICE</th>
                    <th style="width: 20%;height: 80px;">QUANTITY</th>
                    <th style="width: 10%;height: 80px;">TOTAL</th>
                </tr>
            </table>
            @{ 
                var CartUser = User.Identity.Name;
            }
            @foreach (var item in Model)
            {
                <table style="border-bottom: 1px solid black" class="san_pham">
                    <tr>
                        <td class="PRODUCT">
                            <img style="height: 200px;float: left; margin-top: 5px;" src="~/Content/img/@item.Images">
                            <div class="thongtin">
                                <h3>@item.Name</h3>
                                Size: @item.Size
                                <br>
                                Color: @item.Colour
                                <br>
                                <a style="margin-left: 15px; color: pink" href="/Carts" class="button_remove" data-id="@item.Prime">Remove</a>
                            </div>
                        </td>

                        <td class="PRICE">
                            <h4>€@item.Price</h4>
                        </td>

                        <td class="QUANTITY">
                            <input class="change-price" data-id="@item.Prime" value="@item.Quanity" type="number" min="1">
                        </td>

                        <td class="TOTAL">
                            €<h4 style="float:right" class="total-price-@item.Prime">@item.QuanityPice</h4>
                        </td>
                    </tr>
                </table>
                
            }
            <div class="main2">
                <div class="main2-1">
                    <h3>Add a note to your order</h3>
                    <input style="height: 50px;width: 400px;border-radius: 10px; border:1px solid black" type="text" name="">
                </div>
                <div class="main2-1">
                    <div style="flex-direction:row;margin-left:50%">
                        <h4 style="float:left">Total : </h4>
                        <h4 style="float:left" class="total-checkout">0</h4>
                        <h4 style="float:left">€</h4>
                    </div>
                    <br />
                    <h4>
                        Payments Secured by Authipay by AIBMS
                        VAT included. Shipping calculated at checkout.
                    </h4>


                    <button style="background-color: #F5CFD1;height: 50px;width: 100px; margin-left: 60%; margin-top: 5%; border-radius: 5px;" data-id="@User.Identity.Name" class="checkout" type="submit">
                        CHECK OUT
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

